{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "types": [
        ],
        "outDir": "build",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],

    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}
